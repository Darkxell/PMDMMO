<?xml version="1.0" encoding="UTF-8"?>
<cutscene xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="pmdmmo"
    xsi:schemaLocation="pmdmmo ../data/xsd/cutscenes.xsd" xmlns:ns1="pmdmmo">
    <creation freezone="Base" fade="true" camerax="30" cameray="20">
        <player>
            <cutsceneid>0</cutsceneid>
            <xpos>35</xpos>
            <ypos>28</ypos>
        </player>
        <pokemon ns1:facing="North">
            <cutsceneid>1</cutsceneid>
            <xpos>35</xpos>
            <ypos>30</ypos>
            <pokemonid>380</pokemonid>
            <state>Dance</state>
            <animated>false</animated>
        </pokemon>
    </creation>
    <events>
        <dialog>
            <dialogscreen text="item.info.7"/>
            <dialogscreen text="quiz.0.0"/>
        </dialog>
        <rotate ns1:target="1" distance="2"/>
        <move ns1:target="1" ypos="32"/>
        <wait/>
        <move ns1:target="1" ypos="35" speed="45"/>
        <delay ticks="40"/>
        <rotate ns1:target="0" instantly="true" distance="-2"/>
