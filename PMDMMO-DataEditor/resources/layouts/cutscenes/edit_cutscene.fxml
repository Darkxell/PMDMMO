<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.darkxell.dataeditor.application.controller.cutscene.EditCutsceneController">
   <children>
      <TitledPane alignment="CENTER" text="Cutscene Creation">
        <content>
		  <fx:include fx:id="cutsceneCreation" source="cutscene_creation.fxml" />
        </content>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TitledPane>
      <TitledPane alignment="CENTER" text="Cutscene End">
        <content>
		  <fx:include fx:id="cutsceneEnd" source="cutscene_end.fxml" />
        </content>
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
      </TitledPane>
      <TitledPane alignment="CENTER" text="Events">
         <VBox.margin>
            <Insets left="10.0" right="10.0" top="10.0" />
         </VBox.margin>
         <content>
            <ListView fx:id="eventList" prefHeight="200.0" prefWidth="200.0" />
         </content>
      </TitledPane>
      <Button mnemonicParsing="false" onAction="#saveChanges" text="Save changes">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
