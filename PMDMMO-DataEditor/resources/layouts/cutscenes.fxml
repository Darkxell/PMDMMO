<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.darkxell.dataeditor.application.controller.CutscenesTabController">
   <center>
      <Label text="Cutscenes tab!!!" BorderPane.alignment="CENTER" />
   </center>
   <left>
      <VBox alignment="CENTER" styleClass="panel" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="cutscenesList" VBox.vgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#onCreateCutscene" text="Create Cutscene" />
         </children>
      </VBox>
   </left>
</BorderPane>
