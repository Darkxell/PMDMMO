      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label text="Sprite Width:" />
      <Label text="Sprite Height:" GridPane.rowIndex="1" />
      <TextField fx:id="widthTextfield" promptText="(16)" GridPane.columnIndex="1" />
      <TextField fx:id="heightTextfield" promptText="(16)" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <CheckBox fx:id="bigShadowCheckbox" mnemonicParsing="false" text="Big Shadow" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
      <Button mnemonicParsing="false" onAction="#onSaveChanges" text="Save Changes" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
