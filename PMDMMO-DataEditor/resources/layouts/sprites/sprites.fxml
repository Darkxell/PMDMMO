<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.darkxell.dataeditor.application.controller.sprites.SpritesTabController">
	<left>
		<VBox alignment="CENTER" styleClass="panel" BorderPane.alignment="CENTER">
			<children>
            <ListView fx:id="spritesList" VBox.vgrow="ALWAYS" />
            <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
               <children>
                  <Button mnemonicParsing="false" onAction="#onCreate" text="Create" />
               </children>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </VBox.margin>
            </HBox>
			</children>
		</VBox>
	</left>
	<center>
		<TitledPane fx:id="editSpritePane" alignment="CENTER" animated="false" collapsible="false" contentDisplay="CENTER" text="Sprite data" BorderPane.alignment="CENTER">
			<content>
				<fx:include fx:id="editSprite" source="edit_sprite.fxml" />
			</content>
		</TitledPane>
	</center>
	<right>
		<TitledPane fx:id="spritePreviewPane" alignment="CENTER" animated="false" collapsible="false" contentDisplay="CENTER" text="Sprite preview" BorderPane.alignment="CENTER">
			<content>
				<fx:include fx:id="testSprite" source="../animations/test_animation.fxml" />
			</content>
		</TitledPane>
	</right>
</BorderPane>
