   <children>
      <Label text="Sprites:" />
      <Label text="Sprite width:" GridPane.rowIndex="1" />
      <Label text="Sprite height:" GridPane.rowIndex="2" />
      <Label text="Sprite X Offset:" GridPane.rowIndex="3" />
      <Label text="Sprite Y Offset:" GridPane.rowIndex="4" />
      <Label text="Sprite Duration:" GridPane.rowIndex="5" />
      <Label text="Back sprites:" GridPane.rowIndex="6" />
      <Label text="Sprite Order:" GridPane.rowIndex="7" />
      <Label text="Animation movement:" GridPane.rowIndex="8" />
      <Label text="Loop start index:" GridPane.rowIndex="9" />
      <Label text="Delay Time:" GridPane.rowIndex="10" />
      <Label text="Sound:" GridPane.rowIndex="11" />
      <Label text="Sound delay:" GridPane.rowIndex="12" />
      <Label text="Pokémon State delay:" GridPane.rowIndex="14" />
      <Label text="Pokémon movement:" GridPane.rowIndex="15" />
      <Label text="Also play:" GridPane.rowIndex="16" />
      <Label text="Delays for also-played:" GridPane.rowIndex="17" />
      <Label text="Overlay animation:" GridPane.rowIndex="18" />
      <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.halignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <RadioButton fx:id="noSpritesRadio" mnemonicParsing="false" onAction="#onSpritesChange" text="No Sprites" />
                  <RadioButton fx:id="defaultSpritesRadio" mnemonicParsing="false" onAction="#onSpritesChange" text="Default path" />
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="5.0">
               <children>
                  <RadioButton fx:id="customSpritesRadio" mnemonicParsing="false" onAction="#onSpritesChange" text="Custom Path" />
                  <TextField fx:id="spritesTextfield" promptText="(start with /)" />
               </children>
            </HBox>
         </children>
         <GridPane.margin>
            <Insets bottom="15.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </VBox>
      <HBox alignment="CENTER" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="20">
         <children>
            <Button mnemonicParsing="false" onAction="#onSave" text="Save Changes" />
            <Button mnemonicParsing="false" onAction="#onCancelChanges" text="Cancel Changes" />
         </children>
         <GridPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </GridPane.margin>
      </HBox>
      <TextField fx:id="widthTextfield" promptText="Sprite width" GridPane.columnIndex="1" GridPane.rowIndex="1" />
      <TextField fx:id="heightTextfield" promptText="Sprite height" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextField promptText="(width/2)" GridPane.columnIndex="1" GridPane.rowIndex="3" fx:id="xTextfield" />
      <TextField fx:id="yTextfield" promptText="(height/2)" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <TextField fx:id="spriteDurationTextfield" promptText="(2)" GridPane.columnIndex="1" GridPane.rowIndex="5" />
      <TextField fx:id="orderTextfield" promptText="index1,index2,index3" GridPane.columnIndex="1" GridPane.rowIndex="7" />
      <TextField fx:id="loopTextfield" promptText="(0)" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <TextField fx:id="delayTextfield" promptText="(15)" GridPane.columnIndex="1" GridPane.rowIndex="10" />
      <TextField fx:id="soundTextfield" promptText="(No sound)" GridPane.columnIndex="1" GridPane.rowIndex="11" />
      <TextField fx:id="soundDelayTextfield" promptText="(0)" GridPane.columnIndex="1" GridPane.rowIndex="12" />
      <TextField fx:id="stateDelayTextfield" promptText="(0)" GridPane.columnIndex="1" GridPane.rowIndex="14" />
      <TextField fx:id="alsoplayTextfield" promptText="(none)" GridPane.columnIndex="1" GridPane.rowIndex="16" />
      <TextField fx:id="alsoplayDelayTextfield" promptText="(0 for each)" GridPane.columnIndex="1" GridPane.rowIndex="17" />
      <TextField fx:id="overlayTextfield" promptText="(none)" GridPane.columnIndex="1" GridPane.rowIndex="18" />
      <ComboBox fx:id="backspritesCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
      <ComboBox fx:id="animMovementCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="8" />
      <ComboBox fx:id="stateCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="13" />
      <ComboBox fx:id="pokemonMovementCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="15" />
      <CheckBox fx:id="playforeachtargetCheckbox" mnemonicParsing="false" text="Plays for each Move target" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="19" GridPane.valignment="CENTER" />
      <CheckBox fx:id="stateCheckbox" mnemonicParsing="false" onAction="#onStateChange" text="Pokémon State:" GridPane.rowIndex="13" />
