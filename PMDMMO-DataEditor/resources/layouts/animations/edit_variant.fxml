      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <CheckBox fx:id="spritesCheckbox" onAction="#onSpritesOverride" text="Override Sprites:" GridPane.rowIndex="1" />
      <CheckBox fx:id="widthCheckbox" onAction="#onWidthOverride" text="Override Sprite width:" GridPane.rowIndex="2" />
      <CheckBox fx:id="heightCheckbox" onAction="#onHeightOverride" text="Override Sprite height:" GridPane.rowIndex="3" />
      <CheckBox onAction="#onXOverride" text="Override Sprite X Offset:" GridPane.rowIndex="4" fx:id="xCheckbox" />
      <CheckBox fx:id="yCheckbox" onAction="#onYOverride" text="Override Sprite Y Offset:" GridPane.rowIndex="5" />
      <CheckBox fx:id="spriteDurationCheckbox" onAction="#onSpriteDurationOverride" text="Override Sprite Duration:" GridPane.rowIndex="6" />
      <CheckBox fx:id="backspritesCheckbox" onAction="#onBackspritesOverride" text="Override Back sprites:" GridPane.rowIndex="7" />
      <CheckBox fx:id="orderCheckbox" onAction="#onOrderOverride" text="Override Sprite Order:" GridPane.rowIndex="8" />
      <CheckBox fx:id="animMovementCheckbox" onAction="#onAnimMovementOverride" text="Override Animation movement:" GridPane.rowIndex="9" />
