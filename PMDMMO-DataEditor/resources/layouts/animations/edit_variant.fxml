      <ComboBox fx:id="animMovementCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="9" />
      <HBox alignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="14">
         <children>
            <RadioButton fx:id="noStateRadio" mnemonicParsing="false" onAction="#onStateChange" text="No state">
               <padding>
                  <Insets right="15.0" />
               </padding>
            </RadioButton>
            <RadioButton fx:id="hasStateRadio" mnemonicParsing="false" onAction="#onStateChange" />
            <ComboBox fx:id="stateCombobox" prefWidth="150.0" />
         </children>
      </HBox>
      <CheckBox fx:id="playforeachtargetCheckbox" mnemonicParsing="false" onAction="#onPlaysforeachOverride" text="Override Plays for each Move target" GridPane.rowIndex="20" />
      <CheckBox fx:id="stateCheckbox" mnemonicParsing="false" onAction="#onStateOverride" text="Override Pokémon State:" GridPane.rowIndex="14" />
      <CheckBox fx:id="clonesCheckbox" onAction="#onClonesOverride" text="Override Clones (overrides everything):" />
      <TextField fx:id="clonesTextfield" promptText="(doesn't clone)" GridPane.columnIndex="1" />
      <ComboBox fx:id="pokemonMovementCombobox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="16" />
      <CheckBox fx:id="playsforeachtargetValueCheckbox" mnemonicParsing="false" text="Plays for each target" GridPane.columnIndex="1" GridPane.rowIndex="20" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</GridPane>
